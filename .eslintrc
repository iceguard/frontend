{
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "plugins": ["react"],
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "node": true
    },
    "settings": {
        "react": {
            "pragma": "React",
            "version": "detect"
        }
    },
    "rules": {
        "semi": ["error", "never"],
        "quotes": ["error", "single"],
        "eol-last": ["error", "always"],
        "jsx-quotes": ["error", "prefer-single"],
        "react/display-name": 0,
        "react/prop-types": 0
    }
}
