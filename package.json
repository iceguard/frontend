{
    "name": "ice-guard-frontend",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "dependencies": {
        "@babel/core": "^7.2.0",
        "@babel/runtime": "^7.3.1",
        "@zeit/next-css": "^1.0.1",
        "firebase": "^5.8.1",
        "firebase-admin": "^6.3.0",
        "firebase-functions": "^2.1.0",
        "next": "^7.0.2",
        "react": "^16.6.3",
        "react-dom": "^16.6.3",
        "react-firebaseui": "^3.1.2",
        "react-redux": "^6.0.0",
        "redux": "^4.0.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.2.0",
        "@babel/core": "^7.2.0",
        "@babel/preset-env": "^7.2.0",
        "@firebase/app-types": "^0.3.2",
        "babel-eslint": "^10.0.1",
        "babel-plugin-module-resolver": "^3.2.0",
        "cpx": "^1.5.0",
        "cross-env": "^5.2.0",
        "eslint": "^5.12.1",
        "eslint-config-prettier": "^4.0.0",
        "eslint-plugin-prettier": "^3.0.1",
        "eslint-plugin-react": "^7.12.4",
        "firebase-tools": "^6.3.0",
        "pre-push": "^0.1.1",
        "prettier": "^1.16.1",
        "rimraf": "^2.6.2"
    },
    "scripts": {
        "fblogin": "yarn firebase login",
        "dev": "next \"src/app\"",
        "preserve": "yarn build-public && yarn build-funcs && yarn build-app && yarn copy-deps && yarn install-deps",
        "serve": "cross-env NODE_ENV=production yarn firebase serve --only functions,hosting",
        "deploy-test": "yarn firebase deploy -P test",
        "deploy-prod": "yarn firebase deploy -P prod",
        "clean": "rimraf \"dist/functions\" && rimraf \"dist/public\"",
        "build-public": "cpx \"src/public/**/*.*\" \"dist/public\" -C",
        "build-funcs": "babel \"src/functions\" --out-dir \"dist/functions\"",
        "build-app": "cross-env NODE_ENV=production next build \"src/app\"",
        "copy-deps": "cpx \"*{package.json,yarn.lock}\" \"dist/functions\"",
        "install-deps": "cd \"dist/functions\" && yarn",
        "lint": "node node_modules/eslint/bin/eslint.js .",
        "lint:fix": "node node_modules/eslint/bin/eslint.js . --fix"
    },
    "pre-push": [
        "lint"
    ],
    "engines": {
        "node": "8"
    }
}
